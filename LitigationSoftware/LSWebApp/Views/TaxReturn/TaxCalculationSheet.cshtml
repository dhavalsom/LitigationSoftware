            </td>
        }
    </tr>
    <tr class="table-active">
        <td>Add: Education Cess</td>
        @foreach (var itsectiondetail in Model.ITReturnDetailsListObject)
        {
            <td>
                @Utilities.FormatNumber(itsectiondetail.MATEducationCess)
            </td>
        }
    </tr>
    <tr class="table-info">
        <td>Tax liability under MAT(B)</td>
        @foreach (var itsectiondetail in Model.ITReturnDetailsListObject)
        {
            <td>
                @Utilities.FormatNumber(itsectiondetail.MATTotalIncome 
                + itsectiondetail.MATSurcharge 
                + itsectiondetail.MATEducationCess)
            </td>
        }
    </tr>
    <tr class="table-active">
        <td colspan="3"></td>
    </tr>
    <tr class="table-info">
        <td>Tax Liability(being higher of Above A or B)</td>
