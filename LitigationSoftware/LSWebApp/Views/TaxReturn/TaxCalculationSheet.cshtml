<style>
    table, th, td {
        border: 1px solid black;
    }
    .css-label {
        cursor: pointer;
    }

    .css-checkbox {
        display: none;
    }

    .fa {
        color: white;
        line-height: 16px;
        border-radius: 4px;
    }

    .fa-plus {
        padding-top: 2px;
        padding-right: 2px;
        padding-left: 2px;
        background-color: #3AC5C9;
    }

    .fa-minus {
        padding-top: 1px;
        padding-right: 2px;
        padding-left: 2px;
        background-color: #E85764;
        display: none;
    }

    .css-checkbox:checked + .css-label .fa-minus {
        display: inline;
    }

    .css-checkbox:checked + .css-label .fa-plus {
        display: none;
    }
</style>
