    {
        if (!string.IsNullOrEmpty(selfassmt.SPIncomeDescription))
        {
            <tr class="table-active">
                <td>@selfassmt.SPIncomeDescription</td>
                @foreach (var itsectiondetail in Model.ITReturnDetailsListObject)
                {
                    <td>@selfassmt.SPIncomeValue</td>
                }
            </tr>
