@model LSWebApp.Models.ITReturnDetailsExtensionModel

<tr class="custom-sub-head">
    <td></td>
    <td></td>
    <td>
        @Html.TextBoxFor(m => m.ITHeadId, Model.ITHeadId.ToString()
        , new { @style = "display:none;", @class = "hdIIHeadIdSubHead" })
        @Html.TextBox("txtSubHeadDesc_" + Model.ITHeadId.ToString(), "", new { @style = "display:none;", @class = "txtSubHead" })
        @Html.CheckBox("chkSubHeadDesc_" + Model.ITHeadId.ToString(), new { @style = "display:none;", @class = "chkSubHead" })
        <label for="@Html.Name("chkSubHeadDesc_" + Model.ITHeadId.ToString())" 
               style="display:none;" class="chkSubHeadLabel">Is Allowance</label>
        <img src="~/images/plus.png"
             class="imgSubHead"
             style="width:20px;height:20px;" 
             title="Click to add sub head"/>
        <img src="~/images/save.png"
             class="imgSubHeadSave"
             style="width:20px;height:20px;display:none;" />
    </td>
    <td></td>
</tr>
<tr class="trDisallowance@(Model.ITHeadId.ToString())">
    <td></td>
    <td>a</td>
    <td>
        Are there any disallowances made in the Assessment Order?
    </td>
    <td></td>
</tr>
@if (Model.DisAllowancesExtensionList != null && Model.DisAllowancesExtensionList.Count() != 0)
{   
    foreach (var extensionItem in Model.DisAllowancesExtensionList)
    {
        <tr>
            <td></td>
            <td></td>
            <td>@extensionItem.SubHeadMasterObject.Description:-</td>
            <td>
                <div class="row col-12">
                    <div class="col-md-6">
                        @Html.TextBox("txtITSubHead_" + extensionItem.ITSubHeadId.ToString()
                        , string.Format("{0:f}", extensionItem.ITSubHeadValue)
                        , new { @class = "numericOnly" })
                    </div>
                </div>
            </td>
        </tr>
    }
}

<tr class="trAllowance@(Model.ITHeadId.ToString())">
    <td></td>
    <td>b</td>
    <td>Are there any allowances made in the Assessment Order?</td>
    <td></td>
</tr>

@if (Model.AllowancesExtensionList != null && Model.AllowancesExtensionList.Count() != 0)
{        
    foreach (var extensionItem in Model.AllowancesExtensionList)
    {
        <tr>
            <td></td>
            <td></td>
            <td>@extensionItem.SubHeadMasterObject.Description:-</td>
            <td>
                <div class="row col-12">
                    <div class="col-md-6">
                        @Html.TextBox("txtITSubHead_" + extensionItem.ITSubHeadId.ToString()
                        , string.Format("{0:f}", extensionItem.ITSubHeadValue)
                        , new { @class = "numericOnly" })
                    </div>
                </div>
            </td>
        </tr>
    }
}