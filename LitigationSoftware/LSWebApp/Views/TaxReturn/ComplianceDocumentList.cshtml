@model LSWebApp.Models.ComplianceDocumentListModel
@{
    ViewBag.Title = "Compliances";
}
<style>
    .tdBorder {
        border: 1px solid black;
        align-content: center;
        margin-left: 5px;
        margin-right: 5px;
    }
</style>
<table>
    @foreach (var compliance in Model.ComplianceList)
    {
        <tr>
            <td class="tdBorder">
                @compliance.SrNo
            </td>
            <td class="tdBorder">
                @compliance.Description
            </td>
            <td class="tdBorder">
                @foreach (var document in Model.ComplianceDocumentList.Where(d => d.ComplianceId == compliance.Id))
                {
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href=" @Url.Content("~/ComplianceDocumentsUpload/"+document.FilePath)"
                               target="_blank">
                                @document.FileName
                            </a>
                            <span class="deleteDoc" onclick="deleteDocument(@(document.Id), '@(document.FilePath)')">
                                <i class="fa fa-trash-o" aria-hidden="true">
                                </i>
                            </span>
                        </li>
                    </ul>
                }
            </td>
        </tr>
    }
</table>
