@model  LS.Models.Company
@{
    ViewBag.Title = "My Dashboard";
}

<h3>Register a new company</h3>

@using (Html.BeginForm("CreateCompany", "TaxReturn"))
{

    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td>
                <div class="form-group">
                    Company Name:
                </div>
            </td>
            <td>
                @Html.TextBoxFor(m => m.CompanyName, new { @class="form-control", @placeholder = "Enter new company name" })
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                <div class="form-group">
                    PANNumber:
                </div>
            </td>
            <td>
                @Html.TextBoxFor(m => m.PANNumber, new { @class = "form-control", @placeholder = "Enter PAN number" })
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td colspan="2" align="center">
               <button type="submit" class="btn btn-primary">Create Company</button>
            </td>
        </tr>

    </table>

}


